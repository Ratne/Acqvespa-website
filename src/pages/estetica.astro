---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import estetica1 from '../assets/images/estetica_bg_1.jpg';
import estetica2 from '../assets/images/estetica_bg_2.jpg';
import estetica3 from '../assets/images/estetica_bg_3.jpg';
import estetica4 from '../assets/images/estetica_bg_4.jpg';
---

<Layout title="Estetica" description="Acqve Spa & Beauty - Estetica per uomini e donne">
	<main>
		<div class="container">
			<div class="row align-items-start">
				<div class="col">
					<div class="d-flex">
						<div class="col">
							<Image class="img img-fluid p-1" src={estetica1} alt="bg5"/>
						</div>
						<div class="col">
							<Image class="img img-fluid p-1" src={estetica2} alt="bg2"/>
						</div>
						<div class="col">
							<Image class="img img-fluid p-1" src={estetica3} alt="bg2"/>
						</div>
						<div class="col">
							<Image class="img img-fluid p-1" src={estetica4} alt="bg2"/>
						</div>
					</div>
				</div>
			</div>
			<div class="row align-items-start">
				<div class="col">
					<h2>DONNA</h2>
					<hr>
					<ul>
						<li>Manicure: € 13.00</li>
						<li>Pedicure estetico : €25.00</li>
						<li>Pedicure curativo: €35.00</li>
						<li>Semipermanente mani: €25.00</li>
						<li>Semipermanente piedi: €22.00 </li>
						<li>Refil: € 35.00</li>
						<li>Ricostruzione con allungamento: da €60.00</li>
						<li>Riparazione: da € 8.00</li>
						<li>Epilazione gamba intera: € 22.00</li>
						<li>Epilazione mezza gamba : €15.00</li>
						<li>Epilazione inguine totale : €15.00</li>
						<li>Brasiliano: €12.00</li>
						<li>Braccia: € 12.00</li>
						<li>Ascelle: € 7.00</li>
						<li>Labiale: €5.00</li>
						<li>Sopracciglia : € 5.00</li>
					</ul>
				</div>
				<div class="col">
					<h2>UOMO</h2>
					<hr>
					<ul>
						<li>Manicure: € 13.00</li>
						<li>Pedicure estetico: €25.00</li>
						<li>Pedicure curativo: €32.00</li>
						<li>Epilazione gamba: €33.00</li>
						<li>Schiena: €25.00</li>
						<li>Petto: €25.00</li>
						<li>Braccia: €15.00</li>
						<li>Glutei: €15.00</li>
						<li>Sopracciglia: €5.00</li>
					</ul>
				</div>
			</div>
			<div class="row align-items-start">
				<h2>TRATTAMENTI</h2>
				<hr>
				<ul>
					<li>Pulizia viso: € 35.00</li>
					<li>Scrub viso: €18.00</li>
					<li>Scrub corpo: €35.00</li>
					<li>Fanghi: €35.00</li>
					<li>Bendaggi: €35.00</li>
					<li>Piedi spa(pedicure estetico+peeling+maschera+massaggio) €35.00</li>
				</ul>
				<p>
					I prezzi dei trattamenti potranno subire dei cambiamenti in base al pacchetto che si vuole acquistare, inserendoci dei prodotti per voi meglio consigliati dal nostro staff.


				</p>
			</div>
		</div>
	</main>
</Layout>

<style>
	h2{
		color: #468B78;
		font-size: 26px;
		font-weight: bold;
	}
	hr{
		border: 1px solid #468B78;
	}
</style>

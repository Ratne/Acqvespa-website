---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import bg1 from '../assets/images/home/bg1.jpg';
import bg2 from '../assets/images/home/bg2.jpg';
---

<Layout title="Home" description="Acqve Spa & Beauty. Più di 300 metri quadrati dedicati alla vostra serenità e tranquillità, lontani dai ritmi frenetici della città">
	<main>
		<div id="carouselExample" class="carousel slide">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<Image src={bg1} alt="bg1"  class="d-block w-100" />

					<div class="carousel-caption d-md-block">
						<h2>IL BENESSERE É AL CENTRO DELLE NOSTRE ATTENZIONI</h2>
					</div>
				</div>
				<div class="carousel-item">
					<Image src={bg2} alt="bg2"  class="d-block w-100" />
					<div class="carousel-caption d-md-block">
						<h2>ABBI CURA DEL TUO CORPO É L'UNICO POSTO DOVE DOVRAI VIVERE</h2>

					</div>
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</main>
</Layout>

